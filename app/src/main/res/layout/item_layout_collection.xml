<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imgColverPic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imgProfilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/imgColverPic"
        app:layout_constraintTop_toBottomOf="@id/imgColverPic" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="John Wick"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/imgProfilePic"
        app:layout_constraintRight_toRightOf="@id/imgColverPic"
        app:layout_constraintTop_toTopOf="@id/imgProfilePic" />

    <TextView
        android:id="@+id/txtPicCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="256 Pics"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/imgProfilePic"
        app:layout_constraintRight_toRightOf="@id/imgColverPic"
        app:layout_constraintTop_toBottomOf="@id/txtUserName" />

    <View
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/imgProfilePic"
        android:background="@android:color/darker_gray" />

</androidx.constraintlayout.widget.ConstraintLayout>