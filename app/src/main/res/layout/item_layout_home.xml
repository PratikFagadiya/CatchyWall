<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="homeResponseModelItem"
            type="com.pratik.catchywall.data.model.HomeResponseModelItem" />

        <variable
            name="homeWallpaperClickListener"
            type="com.pratik.catchywall.presentation.callbacks.HomeWallpaperClickListener" />

        <import type="android.graphics.Color" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImageColverPic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            android:onClick="@{() -> homeWallpaperClickListener.homeWallpaperClick(homeResponseModelItem.urls,homeResponseModelItem.user,homeResponseModelItem.id,homeResponseModelItem.user.name)}"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgColverPic"
                loadImageWith20dpAndPlaceholderColor="@{homeResponseModelItem.urls.regular}"
                placeholderColor="@{homeResponseModelItem.color}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>